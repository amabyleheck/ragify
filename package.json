{
  "name": "tcc",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint:full": "pnpm run lint && pnpm run format:check",
    "lint": "eslint '**/*.{ts,tsx}' --max-warnings 0 && echo 'Success!'",
    "lint:fix": "eslint '**/*.{ts,tsx}' --fix",
    "format:check": "prettier --check \"**/*.{md,html,mjml,json,graphql,yml,css,scss}\"",
    "format": "prettier --write \"**/*.{md,html,mjml,json,graphql,yml,css,scss}\""
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@fontsource/roboto": "^5.0.14",
    "@hookform/resolvers": "^3.9.0",
    "@mui/icons-material": "^6.0.1",
    "@mui/material": "^6.0.1",
    "@mui/system": "^6.0.1",
    "@mui/x-data-grid": "^7.15.0",
    "axios": "^1.7.7",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "next": "~14.2.4",
    "notistack": "^3.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.53.0",
    "react-pdf": "^9.1.1",
    "react-transition-group": "^4.4.5",
    "swr": "^2.2.5",
    "uuid": "^10.0.0",
    "zod": "^3.23.8",
    "zustand": "5.0.0-rc.2"
  },
  "lint-staged": {
    "*.{md,html,mjml,json,graphql,yml,css,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix --max-warnings 0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npx lint-staged --relative"
    }
  },
  "engines": {
    "node": "20.11.1"
  },
  "packageManager": "pnpm@8.7.0",
  "devDependencies": {
    "@eslint/js": "^9.11.0",
    "@svgr/webpack": "^8.1.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.7",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "ghooks": "^2.0.4",
    "lint-staged": "^15.2.10",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwindcss": "^3.4.3",
    "typescript": "5.5.3",
    "typescript-eslint": "^8.6.0"
  }
}
