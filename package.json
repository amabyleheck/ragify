{
  "name": "tcc",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint:full": "pnpm run lint && pnpm run format:check",
    "lint": "eslint '**/*.{ts,tsx}' --max-warnings 0 && tsc",
    "lint:fix": "eslint '**/*.{ts,tsx}' --fix",
    "format:check": "prettier --check \"**/*.{md,html,mjml,json,graphql,yml,css,scss}\"",
    "format": "prettier --write \"**/*.{md,html,mjml,json,graphql,yml,css,scss}\""
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@fontsource/roboto": "^5.0.14",
    "@hookform/resolvers": "^3.9.0",
    "@mui/icons-material": "^6.0.1",
    "@mui/material": "^6.0.1",
    "@mui/system": "^6.0.1",
    "@mui/x-data-grid": "^7.15.0",
    "next": "14.2.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-transition-group": "^4.4.5",
    "zod": "^3.23.8"
  },
  "lint-staged": {
    "*.{md,html,mjml,json,graphql,yml,css,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix --max-warnings 0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npx lint-staged --relative"
    }
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.7",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
